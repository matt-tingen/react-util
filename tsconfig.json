{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2019", "DOM"],
    "target": "ESNext",
    "jsx": "react-jsx",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["@types/node"]
}
